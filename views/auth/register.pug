extends ../layout/index

block content
  div
    h1(class='text-4xl my-10 font-extrabold text-center') Bienes
      span(class='font-normal') Raíces
    h2(class='text-center font-extrabold')= title

    div(class='mt-8 mx-auto max-w-md')
      div(class='bg-white py-8 px-4 shadow')
        form(class='space-y-5' method='POST' action='/auth/register')
          div
            label(for="name" class='block text-sm uppercase text-gray-500 mb2 font-bold') Nombre
            input(id="name" type="text" name="name" class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400' placeholder="Nombre")
          div
            label(for="email" class='block text-sm uppercase text-gray-500 mb2 font-bold') Correo Electrónico
            input(id="email" type="email" name="email" class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400' placeholder="Correo Electrónico")
          div
            label(for="password" class='block text-sm uppercase text-gray-500 mb2 font-bold') Contraseña
            input(id="password" type="password" name="password" class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400' placeholder="Contraseña")
          div
            label(for="password_confirmation" class='block text-sm uppercase text-gray-500 mb2 font-bold') Confirmar Contraseña
            input(id="password_confirmation" type="password" name="password_confirmation" class='w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400' placeholder="Confirmar Contraseña")
          div(class='flex items-center justify-between')
            a(href="/auth/login" class='text-gray-500 text-xs') ¿Ya tienes una cuenta? Inicia sesión
            a(href="/auth/reset-password" class='text-gray-500 text-xs') Recuperar contraseña
          input(type="submit" value="Registrarse" class='uppercase w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-md cursor-pointer')